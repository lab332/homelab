# WireGuard Manager Configuration
# Copy this file to /etc/wg-manager/.env

# Telegram Bot
WG_MANAGER_TELEGRAM_BOT_TOKEN=your_bot_token_here
WG_MANAGER_TELEGRAM_ALLOWED_USERS=[123456789]  # Your Telegram user ID

# External node SSH connection
WG_MANAGER_EXTERNAL_HOST=89.23.107.71
WG_MANAGER_EXTERNAL_USER=root
WG_MANAGER_EXTERNAL_SSH_KEY=/root/.ssh/id_rsa
WG_MANAGER_EXTERNAL_SSH_PORT=22

# WireGuard settings
WG_MANAGER_WG_INTERFACE=wg0
WG_MANAGER_WG_CONFIG_PATH=/etc/wireguard
WG_MANAGER_WG_KEYS_PATH=/etc/wireguard/keys

# API settings
WG_MANAGER_API_HOST=0.0.0.0
WG_MANAGER_API_PORT=8080
WG_MANAGER_API_SECRET=your_secret_key_here

# User creation settings
WG_MANAGER_WG_NETWORK_PREFIX=10.20.30
WG_MANAGER_WG_CLIENTS_DIR=/etc/wireguard/clients
