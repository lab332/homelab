# {{ ansible_managed }}
# WireGuard Manager Configuration

# Telegram Bot
WG_MANAGER_TELEGRAM_BOT_TOKEN={{ wg_manager_telegram_bot_token }}
WG_MANAGER_TELEGRAM_CHAT_ID={{ wg_manager_telegram_chat_id }}

# Webhook settings (recommended for production)
# Set WEBHOOK_URL to enable webhook mode (instead of polling)
{% if wg_manager_telegram_webhook_url %}
WG_MANAGER_TELEGRAM_WEBHOOK_URL={{ wg_manager_telegram_webhook_url }}
WG_MANAGER_TELEGRAM_WEBHOOK_PATH={{ wg_manager_telegram_webhook_path }}
{% endif %}

# External node SSH connection
WG_MANAGER_EXTERNAL_HOST={{ wg_manager_external_host }}
WG_MANAGER_EXTERNAL_USER={{ wg_manager_external_user }}
WG_MANAGER_EXTERNAL_SSH_KEY={{ wg_manager_external_ssh_key }}
WG_MANAGER_EXTERNAL_SSH_PORT={{ wg_manager_external_ssh_port }}

# WireGuard settings
WG_MANAGER_WG_INTERFACE={{ wg_manager_wg_interface }}
WG_MANAGER_WG_CONFIG_PATH={{ wg_manager_wg_config_path }}
WG_MANAGER_WG_KEYS_PATH={{ wg_manager_wg_keys_path }}

# API settings
WG_MANAGER_API_HOST={{ wg_manager_api_host }}
WG_MANAGER_API_PORT={{ wg_manager_api_port }}
{% if wg_manager_api_secret %}
WG_MANAGER_API_SECRET={{ wg_manager_api_secret }}
{% endif %}

# User creation settings
WG_MANAGER_WG_NETWORK_PREFIX={{ wg_manager_wg_network_prefix }}
WG_MANAGER_WG_CLIENTS_DIR={{ wg_manager_wg_clients_dir }}
WG_MANAGER_WG_ENDPOINT={{ wg_manager_wg_endpoint }}
WG_MANAGER_WG_ENDPOINT_PORT={{ wg_manager_wg_endpoint_port }}